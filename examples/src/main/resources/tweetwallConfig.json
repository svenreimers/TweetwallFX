{
    "tweetwall": {
        "query": "#devoxx",
        "title": "The JavaFX Cinema Tweetwall for Devoxx 2022 Belgium!",
        "stylesheetResource": "tweetwall.css"
    },

    "stepEngine": {
        "dataProviderSettings": [
            {
                "dataProviderClassName": "org.tweetwallfx.stepengine.dataproviders.TweetStreamDataProvider",
                "config": {
                    "hideRetweets": true,
                    "maxTweets": 50,
                    "historySize": 100
                }
            }
        ],
        "steps": [
            {
                "stepClassName": "org.tweetwallfx.devoxx.cfp.stepengine.steps.ShowSchedule",
                "config": {
                    "layoutX": 35,
                    "layoutY": 215,
                    "width": 980,
                    "sessionHeight": 150,
                    "showAvatar": true,
                    "avatarArcSize": 16,
                    "avatarSize": 50,
                    "avatarSpacing": 4,
                    "showFavourite": true,
                    "stepDuration": 500
                }
            },
            {
                "stepClassName": "org.tweetwallfx.controls.steps.InfiniteScrollingTweetsStep",
                "config": {
                    "layoutX": 1050,
                    "layoutY": 215,
                    "height": 630,
                    "tweetGap": 10,
                    "tweetWidth": 200,
                    "stepDuration": 5000,
                    "speed": 25,
                    "columns": 3,
                    "columnGap": 10,
                    "numberOfTweets": 50,
                    "stepIdentifier": "rightHandSideInfiniteScrolling",
                    "vOffset": 400
                }
            },
            {
                "stepClassName": "org.tweetwallfx.stepengine.steps.PauseStep",
                "config": {
                    "unit": "SECONDS",
                    "amount": "30"
                }
            },
            {
                "stepClassName": "org.tweetwallfx.controls.steps.NodeFadeOutStep",
                "config": {
                    "nodeSelector": "#scheduleNode"
                }
            },
            {
                "stepClassName": "org.tweetwallfx.devoxx.cfp.stepengine.steps.ShowSchedule",
                "config": {
                    "layoutX": 35,
                    "layoutY": 215,
                    "width": 980,
                    "sessionHeight": 150,
                    "showAvatar": true,
                    "avatarArcSize": 16,
                    "avatarSize": 50,
                    "avatarSpacing": 4,
                    "showFavourite": true,
                    "stepDuration": 500
                }
            },
            {
                "stepClassName": "org.tweetwallfx.stepengine.steps.PauseStep",
                "config": {
                    "unit": "SECONDS",
                    "amount": "15"
                }
            },
            {
                "stepClassName": "org.tweetwallfx.stepengine.steps.GenericShutdownStep",
                "config": {
                    "stepToTerminate": "rightHandSideInfiniteScrolling"
                }
            },
            {
                "stepClassName": "org.tweetwallfx.controls.steps.FadeInCloudStep",
                "config": {
                    "layoutX": 1100,
                    "layoutY": 210,
                    "width": 800,
                    "height": 550,
                    "stepDuration": 15000
                }
            },
            {
                "stepClassName": "org.tweetwallfx.controls.steps.NodeFadeOutStep",
                "config": {
                    "nodeSelector": "#scheduleNode"
                }
            },
            {
                "stepClassName": "org.tweetwallfx.devoxx.cfp.stepengine.steps.ShowSchedule",
                "config": {
                    "layoutX": 35,
                    "layoutY": 215,
                    "width": 980,
                    "sessionHeight": 150,
                    "showAvatar": true,
                    "avatarArcSize": 16,
                    "avatarSize": 50,
                    "avatarSpacing": 4,
                    "showFavourite": true,
                    "stepDuration": 500
                }
            },
            {
                "stepClassName": "org.tweetwallfx.stepengine.steps.PauseStep",
                "config": {
                    "unit": "SECONDS",
                    "amount": "15"
                }
            },
            {
                "stepClassName": "org.tweetwallfx.controls.steps.CloudFadeOutStep"
            },
            {
                "stepClassName": "org.tweetwallfx.controls.steps.NodeFadeOutStep",
                "config": {
                    "nodeSelector": "#scheduleNode"
                }
            }
        ]
    },

    "twitter": {
        "extendedMode": true
    },
    "filterchains": {
        "chains": {
            "twitter": {
                "domainObjectClassName": "org.tweetwallfx.tweet.api.Tweet",
                "defaultResult": true,
                "filterSteps": [
                    {
                        "stepClassName": "org.tweetwallfx.tweet.api.filter.AcceptFromSenderFilterStep"
                    },
                    {
                        "stepClassName": "org.tweetwallfx.tweet.api.filter.RejectFromSenderFilterStep"
                    },
                    {
                        "stepClassName": "org.tweetwallfx.tweet.api.filter.RejectContainingHashtagFilterStep"
                    },
                    {
                        "stepClassName": "org.tweetwallfx.tweet.api.filter.UserMinimumFollwerCountFilterStep"
                    },
                    {
                        "stepClassName": "org.tweetwallfx.tweet.api.filter.MaxHashtagLengthFilterStep"
                    },
                    {
                        "stepClassName": "org.tweetwallfx.tweet.api.filter.RejectContainingTextPhraseFilterStep"
                    }
                ]
            }
        }
    },
    "org.tweetwallfx.tweet.api.filter.AcceptFromSenderFilterStep$Config": {
        "checkRetweeted": false,
        "userHandles": [
            "Devoxx"
        ]
    },
    "org.tweetwallfx.tweet.api.filter.MaxHashtagLengthFilterStep$Config": {
        "checkRetweeted": true,
        "maxLength": 15
    },
    "org.tweetwallfx.tweet.api.filter.RejectFromSenderFilterStep$Config": {
        "checkRetweeted": true,
        "userHandles": [
            "turkeytoday"
        ]
    },
    "org.tweetwallfx.tweet.api.filter.RejectContainingHashtagFilterStep$Config": {
        "checkRetweeted": true,
        "hashtags": [
            "devoxxua2019",
            "devoxxua"
        ]
    },
    "org.tweetwallfx.tweet.api.filter.RejectContainingTextPhraseFilterStep$Config": {
        "checkRetweeted": true,
        "textPhrases": [
            "xx18xx"
        ]
    },
    "org.tweetwallfx.tweet.api.filter.UserMinimumFollwerCountFilterStep$Config": {
        "count": 25
    },
    "org.tweetwallfx.devoxx.cfp.stepengine.dataprovider.ScheduleDataProvider": {
        "initialDelay": 0,
        "scheduleDuration": 900
    },
    "org.tweetwallfx.stepengine.dataproviders.TweetStreamDataProvider": {
        "hideRetweets": true,
        "historySize": 100,
        "maxTweets": 50
    },
    "cacheConfiguration": {
        "caches": {
            "trackImage": {
                "keyType": "java.lang.String",
                "valueType": "org.tweetwallfx.cache.URLContent",
                "contentLoaderThreads": 1,
                "expiry": {
                    "type": "TIME_TO_IDLE",
                    "amount": 14,
                    "unit": "DAYS"
                },
                "cacheResources": [
                    {
                        "type": "HEAP",
                        "amount": 100
                    },
                    {
                        "type": "DISK",
                        "amount": 10,
                        "unit": "MB"
                    }
                ]
            }
        }
    },
    "devoxxCFP": {
        "baseUri": "https://dvbe22.cfp.dev/api/public",
        "votingResultsUri": "https://dvbe22.cfp.dev/api/public/ratings/ZG9udHNoYXJldGhpc2luZm8="
    }
}